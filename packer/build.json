{
  "variables": {
    "disk_size": "7500",
    "memory": "10G",
    "cpus": "2",
    "headless": "true",
    "iso_url": "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-11.1.0-amd64-netinst.iso",
    "iso_checksum": "8488abc1361590ee7a3c9b00ec059b29dfb1da40f8ba4adf293c7a30fa943eb2",
    "version": "{{ env `VERSION`}}",
    "ansible_args": "{{ env `ANSIBLE_ARGS`}}"
  },
  "builders": [
    {
      "name": "qemu",
      "type": "qemu",
      "format": "raw",
      "headless": "{{ user `headless` }}",
      "accelerator": "kvm",
      "disk_interface": "virtio-scsi",
      "disk_size": "{{ user `disk_size` }}",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha256",
      "http_directory": ".",
      "ssh_username": "root",
      "ssh_password": "shell",
      "shutdown_command": "shutdown -h now",
      "ssh_wait_timeout": "60m",
      "boot_wait": "2s",
      "boot_command": [
        "<esc><wait>",
        "/install.amd/vmlinuz ",
        "initrd=/install.amd/initrd.gz ",
        "hostname=airgap ",
        "auto=true ",
        "priority=critical ",
        "interface=auto ",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/packer/preseed.cfg ",
        "<enter>"
      ],
      "qemuargs": [
        [ "-m", "{{ user `memory` }}" ],
        [ "-smp", "cpus={{ user `cpus`}}"]
      ],
      "output_directory": ".packer/build/"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt install -y python python3",
        "mount -t tmpfs -o size=8G tmpfs /tmp/"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "ansible/main.yml",
      "extra_arguments": [
	"-e ansible_python_interpreter=/usr/bin/python3"
      ]
    },
    {
      "type": "file",
      "source": "scripts/",
      "destination": "/usr/local/bin/"
    },
    {
      "type": "file",
      "source": "packer/etc/",
      "destination": "/etc/"
    }

  ],
  "post-processors": [[
    {
      "compression_level": 6,
      "format": ".gz",
      "keep_input_artifact": false,
      "output": "dist/airgap-{{user `version`}}.raw.gz",
      "type": "compress"
    },
    {
      "type": "shell-local",
      "inline": [
        "ln -s airgrap-{{ user `version` }}.tar.gz dist/airgap-latest.raw.gz"
      ]
    }
  ]]
}
